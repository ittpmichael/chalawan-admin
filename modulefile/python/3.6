#%Module 1.0
#
#  python3.6 module for use with 'environment-modules' package:
#

module load openmpi/2.1.2/2017

set             python_version 3.6.5
set             PYTHON_DIR              /opt/python3.6
set             PYTHON_Version          python3.6
set             PYTHON_VersionM         python3.6m

prepend-path    PATH                    $PYTHON_DIR/bin
prepend-path    PYTHONPATH              $PYTHON_DIR/lib/$PYTHON_Version/site-packages
prepend-path    PYTHONPATH              /usr/bin
prepend-path    INCLUDE                 $PYTHON_DIR/include/$PYTHON_VersionM
prepend-path    LD_LIBRARY_PATH         $PYTHON_DIR/lib/$PYTHON_Version
append-path     LD_LIBRARY_PATH         /usr/lib64
prepend-path    MANPATH                 $PYTHON_DIR/share/man/man1

setenv          PYTHON_HOME             $PYTHON_DIR
setenv          PYTHON_BIN              $PYTHON_DIR/bin
setenv          PYTHON_INCLUDE          $PYTHON_DIR/include/$PYTHON_VersionM
setenv          PYTHON_INCLUDE          /opt/pgi/linux86-64/2017/mpi/openmpi-2.1.2/include
setenv		PYTHON_INCLUDE		/usr/include
setenv          PYTHON_LIB              $PYTHON_DIR/lib/$PYTHON_Version
setenv          PYTHON_MAN              $PYTHON_DIR/share/man

