#%Module 1.0
#
#  CUDA Toolkit module for use with 'environment-modules' package:
#
# modulefiles/

set	cuda_version	7.5.18
set	CUDA_DIR	/usr/local/cuda-7.5
set	CUDA_version	cuda-7.5

prepend-path	PATH		$CUDA_DIR/bin
prepend-path    PATH            $CUDA_DIR/nvvm/bin

prepend-path	INCLUDE		$CUDA_DIR/include
prepend-path    INCLUDE         $CUDA_DIR/nvvm/include
prepend-path    INCLUDE		$CUDA_DIR/extras/CUPTI/include/GL
prepend-path	INCLUDE		$CUDA_DIR/extras/CUPTI/include/openacc
prepend-path    INCLUDE         $CUDA_DIR/extras/CUPTI/include
prepend-path    INCLUDE         $CUDA_DIR/extras/Debugger/include

prepend-path	LD_LIBRARY_PATH	$CUDA_DIR/lib64
prepend-path    LD_LIBRARY_PATH $CUDA_DIR/extras/CUPTI/lib64
prepend-path    LD_LIBRARY_PATH $CUDA_DIR/extras/Debugger/lib64
prepend-path    LD_LIBRARY_PATH $CUDA_DIR/nvvm/lib64
prepend-path	MANPATH		$CUDA_DIR/doc/man
